                    </Button>
                    <Button x:Name="mute1" Height="47" Canvas.Left="199" Canvas.Top="156" Width="47">
                        <Image Source="mic.png" Width="35"/>
                    </Button>
                    <Button x:Name="expand1" Height="47" Canvas.Left="251" Canvas.Top="156" Width="47">
                        <Image Source="expand.png" Width="29"/>
                    </Button>
                    <Label x:Name="warning1" Content="Warning" Canvas.Left="217" Canvas.Top="10" Foreground="#FFFD0707" Width="81" FontSize="16" FontWeight="Bold"/>
