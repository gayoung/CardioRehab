                    <Image x:Name="patientFrame1" Height="141" Canvas.Left="10" Canvas.Top="10" Width="288"/>
                    <Image Height="24" Canvas.Left="10" Source="heart.png" Stretch="Fill" Canvas.Top="156" Width="24"/>
                    <Label x:Name="hrLabel1" Content="HR : " Canvas.Left="39" Canvas.Top="156" FontWeight="Bold"/>
                    <Label x:Name="oxiLabel1" Content="OX : " Canvas.Left="39" Canvas.Top="187" FontWeight="Bold"/>
                    <Image Height="24" Canvas.Left="10" Source="oxygen.png" Stretch="Fill" Canvas.Top="187" Width="24"/>
                    <Image Height="24" Canvas.Left="10" Source="bp.png" Stretch="Fill" Canvas.Top="218" Width="24"/>
                    <Label x:Name="bpLabel1" Content="BP : " Canvas.Left="39" Canvas.Top="216" RenderTransformOrigin="0.545,0.231" FontWeight="Bold"/>
                    <Label x:Name="hrValue1" Content="--" Canvas.Left="91" Canvas.Top="156" FontWeight="Bold"/>
                    <Label x:Name="oxiValue1" Content="--" Canvas.Left="91" Canvas.Top="187" FontWeight="Bold"/>
